<Window x:Class="RxCanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RxCanvas"
        Title="MainWindow" Height="700" Width="920"
        Background="White"
        WindowStartupLocation="CenterScreen"
        UseLayoutRounding="False" SnapsToDevicePixels="True"
        TextOptions.TextFormattingMode="Ideal" TextOptions.TextHintingMode="Auto" TextOptions.TextRenderingMode="ClearType">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="Children" ItemsSource="{Binding Children}" Grid.Column="0" BorderBrush="{x:Null}" BorderThickness="0" FocusVisualStyle="{x:Null}"/>
        <local:PanAndZoomBorder ClipToBounds="True" Background="Transparent" Grid.Column="1">
            <Grid x:Name="Layout"/>
        </local:PanAndZoomBorder>
    </Grid>
</Window>
